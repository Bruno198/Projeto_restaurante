<!DOCTYPE html>
<html lang="pt-br">
  <head>
  
    <!-- Meta tags Obrigatórias -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Restaurante</title>

   
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Adiministrativo</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
        <span class="navbar-toggler-icon"></span>
      </button>

         <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item active">
                        <a class="nav-link" href="/adicionarproduto">Adicionar Produtos <span class="sr-only">(página atual)</span></a>
                      </li>
                    
               
        </ul>
       
       
      </div>
    </nav>
<br>

    <div class="container">
        <button type="button" class="btn btn-success" name="botaoadicionar" onclick="adicionarProduto()">
            Adicionar Produto</button>
        <% if (listAdicionar.length  > 0) {%>
            <h5>Produtos Disponiveis</h5>
          <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">Nome</th>
                <th scope="col">Quantida</th>
                <th scope="col">Valor</th>
               
              </tr>
            </thead>
            <% listAdicionar.forEach( element => {%>
              <tr>
                <td><%= element.nome_do_produto %> </td>
                <td><%=element.quantidade %> </td>
                <td><%= " R$ " +element.valor_do_produto%> </td>
                  <td ><button type="button" class="btn btn-danger" name="botaoadicionar">Excluir</button></td> 
                  <td ><button type="button" class="btn btn-primary" name="botaoexcluir">Editar</button></td> 
                    
                </td>
        
            <% });%>   
          </table>
          <% }%>
          </div>
    </div>
    <div class="modal fade" id="modal_adicionar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Adicionar Produto</h5><br><br>
            </div>
            <label for="pedidos">Nome</label>
                <input type="text" class="form-control" name="nome_do_produto" id="nome_do_produto"  placeholder="Informe o Nome do Produto">

            <label for="pedidos">Quantidade</label>
            <input type="number" class="form-control" name="quantidade" id="quantidade"  placeholder="Informe quantidade do produto que sera adicionado">

            <label for="pedidos">Valor</label>
            <input type="number" class="form-control" name="quantidade" id="quantidade"  placeholder="Informe o valor do Produto">
          
              <hr>
            <button type="submit" class="btn btn-success" >Adicionar Produto</button>
          </div>
         
        </div>
      </div>
    <script>
        function adicionarProduto(){
            $('#modal_adicionar').modal('show')
        }
    </script>
   

  
  
  
    <!-- JavaScript (Opcional) -->
    <!-- jQuery primeiro, depois Popper.js, depois Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>